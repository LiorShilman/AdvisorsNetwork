# קובץ .env.example - תבנית להגדרת משתנים
# העתק קובץ זה ל-.env ומלא את הערכים האמיתיים

# הגדרות השרת
PORT=21500
NODE_ENV=production

# MongoDB
# ל-development מקומי:
MONGODB_URI=mongodb://localhost:27017/financial-advisors-360

# MongoDB Atlas (לייצור):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority&appName=<appname>

# OpenAI
# קבל API Key מ: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-api-key-here

# מאפייני המודל
MODEL_NAME=gpt-4o
TEMPERATURE=0.6
